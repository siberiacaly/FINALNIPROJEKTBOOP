@using FINALNIPROJEKTBOOP.Models;

@{
    ViewData["Title"] = "AddMovie";
    model = addmoviemodel();
}



@using (Html.BeginForm("AddMovie", "Movies", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.NameOfMovie)
        @Html.EditorFor(model => model.NameOfMovie, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReleaseDate)
        @Html.EditorFor(model => model.ReleaseDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Genre)
        @Html.EditorFor(model => model.Genre, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
